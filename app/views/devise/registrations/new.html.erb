<div class="container">
<%= render "shared/header" %>
  <h2 class="top-menu">Sign up</h2>
  <%= form_with model: @user, url: user_registration_path, id: 'new-user', class: 'new-user', local: true do |f| %>

  <%= render "shared/error_messages", model: f.object %>  

    <div class="field">
      <%= f.label :nickname, "ニックネーム(必須)" %></em><br />
      <%= f.text_field :nickname, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス(必須)" %><br />
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード(必須)" %>
      <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認(必須)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class:"action-red-btn" %>
    </div>
  <% end %>
</div>
